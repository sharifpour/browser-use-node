{
	"name": "browser-use-node",
	"version": "0.1.11",
	"description": "Browser automation powered by LLMs in JavaScript",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"scripts": {
		"build": "bun build ./src/index.ts --outdir=dist --target=node",
		"clean": "rm -rf dist",
		"test": "bun test",
		"lint": "biome check src/**/*.ts",
		"format": "biome format src/**/*.ts",
		"prepare": "bun run build",
		"example:google": "bun run examples/google-search.ts",
		"test:smoke": "bun test tests/smoke/smoke.test.ts",
		"type-check": "bun run tsc --noEmit"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"keywords": [
		"browser",
		"automation",
		"llm",
		"ai",
		"playwright",
		"node",
		"browser-use",
		"browser-use-node",
		"browser-use-js"
	],
	"author": "Alex Dankov <dankov.kiev@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@langchain/openai": "^0.0.10",
		"dotenv": "^16.4.7",
		"electron": "^33.2.1",
		"langchain": "^0.1.0",
		"playwright": "^1.49.1",
		"uuid": "^9.0.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/node": "^20.10.6",
		"@types/uuid": "^9.0.7",
		"biome": "^0.3.3",
		"typescript": "^5.3.3"
	}
}
